  echo "âŒ Linting/formatting failed. Please fix the errors and try again."
  exit 1
}

# Generate Prisma Client if DATABASE_URL is available (for type checking)
if [ -n "$DATABASE_URL" ]; then
  echo "ğŸ”§ Generating Prisma Client..."
  npx prisma generate > /dev/null 2>&1 || echo "âš ï¸  Prisma generation skipped (DATABASE_URL may not be set)"
